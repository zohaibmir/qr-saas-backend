# Payment Integration Environment Variables
# Add these to your .env file in services/user-service/

# ==============================================
# STRIPE CONFIGURATION (Primary for Global)
# ==============================================
STRIPE_PUBLIC_KEY=pk_test_...  # Test public key
STRIPE_SECRET_KEY=sk_test_...  # Test secret key  
STRIPE_WEBHOOK_SECRET=whsec_...  # Webhook endpoint secret

# Production (set when ready)
# STRIPE_PUBLIC_KEY_PROD=pk_live_...
# STRIPE_SECRET_KEY_PROD=sk_live_...
# STRIPE_WEBHOOK_SECRET_PROD=whsec_...

# ==============================================
# KLARNA CONFIGURATION (Primary for Sweden/Nordics)
# ==============================================
KLARNA_USERNAME=your_klarna_username  # Klarna API username
KLARNA_PASSWORD=your_klarna_password  # Klarna API password
KLARNA_ENVIRONMENT=playground  # playground | production

# ==============================================
# SWISH PAYMENT CONFIGURATION (SWEDEN)
# ==============================================
# Swish is the leading mobile payment solution in Sweden with 60%+ market share
SWISH_API_URL=https://mss.cpc.getswish.net  # Production URL (use sandbox for testing)
SWISH_SANDBOX_URL=https://mss-testbeds.cpc.getswish.net  # Sandbox URL for testing
SWISH_PAYEE_ALIAS=1231181189  # Your Swish merchant number (test number shown)
SWISH_CERTIFICATE_PATH=/path/to/your/swish.p12  # Path to your Swish certificate
SWISH_CERTIFICATE_PASSWORD=your_certificate_password
SWISH_CALLBACK_URL=https://yourdomain.com/api/v1/payments/webhooks  # Your callback URL

# Swish QR Code Configuration
SWISH_QR_FORMAT=PNG  # QR code format: PNG, SVG
SWISH_QR_SIZE=400  # QR code size in pixels
SWISH_QR_BORDER=4  # QR code border size

# ==============================================
# PAYPAL CONFIGURATION (Global fallback)
# ==============================================
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret  
PAYPAL_ENVIRONMENT=sandbox  # sandbox | live

# ==============================================
# GENERAL PAYMENT SETTINGS
# ==============================================
PAYMENT_DEFAULT_CURRENCY=SEK  # SEK for Swedish market, USD for global
PAYMENT_ALLOWED_CURRENCIES=SEK,USD,EUR  # Supported currencies
PAYMENT_WEBHOOK_TIMEOUT=30  # Webhook timeout in seconds

# ==============================================
# SECURITY SETTINGS
# ==============================================
PAYMENT_ENCRYPTION_KEY=your_32_char_encryption_key_here  # For encrypting payment data
PAYMENT_MAX_REFUND_DAYS=30  # Maximum days for refunds
PAYMENT_REQUIRE_3DS=true  # Require 3D Secure for cards