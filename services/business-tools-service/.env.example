# Business Tools Service Environment Configuration
# Copy this file to .env and update values for your environment

# ===========================================
# Server Configuration
# ===========================================
NODE_ENV=development
PORT=3014
HOST=0.0.0.0
SERVICE_NAME=business-tools-service

# ===========================================
# Database Configuration
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=qr_generation
DB_USER=postgres
DB_PASSWORD=your_postgres_password
DB_SSL=false
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# ===========================================
# JWT Authentication
# ===========================================
JWT_SECRET=your-super-secure-jwt-secret-key-here-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_ISSUER=qr-generation-platform
JWT_AUDIENCE=business-tools-service

# ===========================================
# Security Configuration
# ===========================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:5173

# ===========================================
# File Storage Configuration
# ===========================================
UPLOAD_PATH=./uploads
UPLOAD_MAX_FILE_SIZE=5242880
UPLOAD_ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,svg,ico,webp
BRAND_ASSETS_PATH=./uploads/brand-assets
SSL_CERTIFICATES_PATH=./uploads/ssl-certificates
DATA_EXPORTS_PATH=./uploads/exports

# ===========================================
# SSL & Domain Configuration
# ===========================================
SSL_CERT_PATH=/app/ssl
SSL_PROVIDER=letsencrypt
DOMAIN_VERIFICATION_TIMEOUT=300000
DNS_PROVIDER=cloudflare
DNS_API_TOKEN=your_dns_api_token

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/business-tools.log
LOG_ERROR_FILE_PATH=./logs/business-tools-error.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_DATE_PATTERN=YYYY-MM-DD

# ===========================================
# Email Configuration (for notifications)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@qr-generator.com
EMAIL_REPLY_TO=support@qr-generator.com

# ===========================================
# External Service URLs
# ===========================================
API_GATEWAY_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
QR_SERVICE_URL=http://localhost:3003
ANALYTICS_SERVICE_URL=http://localhost:3004
NOTIFICATION_SERVICE_URL=http://localhost:3005
FILE_SERVICE_URL=http://localhost:3006

# ===========================================
# GDPR Configuration
# ===========================================
GDPR_DATA_RETENTION_DAYS=2555
GDPR_REQUEST_TIMEOUT=2592000000
GDPR_EXPORT_ENCRYPTION=true
GDPR_EXPORT_PASSWORD_LENGTH=16
GDPR_COMPLIANCE_EMAIL=privacy@qr-generator.com

# ===========================================
# White Label Configuration
# ===========================================
DEFAULT_PRIMARY_COLOR=#007bff
DEFAULT_SECONDARY_COLOR=#6c757d
DEFAULT_ACCENT_COLOR=#28a745
DEFAULT_BACKGROUND_COLOR=#ffffff
DEFAULT_TEXT_COLOR=#333333
PREVIEW_TEMPLATE_PATH=./templates/preview.html
BRAND_ASSET_CDN_URL=https://cdn.qr-generator.com

# ===========================================
# Custom Domains Configuration
# ===========================================
DOMAIN_VERIFICATION_METHODS=dns,http,email
DEFAULT_SSL_PROVIDER=letsencrypt
SSL_CHALLENGE_TYPE=http-01
SSL_RENEWAL_DAYS_BEFORE=30
DOMAIN_STATUS_CHECK_INTERVAL=3600000

# ===========================================
# Monitoring & Health Checks
# ===========================================
HEALTH_CHECK_INTERVAL=60000
METRICS_ENABLED=true
METRICS_PORT=9090
PROMETHEUS_ENABLED=false

# ===========================================
# Development Configuration
# ===========================================
DEV_AUTO_RELOAD=true
DEV_MOCK_SSL=true
DEV_SKIP_DOMAIN_VERIFICATION=false
DEV_SEED_DATA=false

# ===========================================
# Production Configuration
# ===========================================
PROD_CLUSTER_MODE=false
PROD_WORKER_PROCESSES=0
PROD_MEMORY_LIMIT=512
PROD_CPU_LIMIT=1000

# ===========================================
# Cache Configuration
# ===========================================
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=3600
CACHE_MAX_KEYS=10000

# ===========================================
# Webhook Configuration
# ===========================================
WEBHOOK_SECRET=your-webhook-secret-key
WEBHOOK_TIMEOUT=10000
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=5000