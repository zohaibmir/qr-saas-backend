# Environment Configuration for Analytics Service
# Copy this file to .env.local and fill in your values

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api
NEXT_PUBLIC_ANALYTICS_API_BASE_URL=http://localhost:3001/api

# Analytics Service Configuration
ANALYTICS_SERVICE_PORT=3001
ANALYTICS_SERVICE_HOST=localhost

# WebSocket Configuration
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:3001/ws
WEBSOCKET_PORT=3001

# Database Configuration (for backend services)
DATABASE_URL=postgresql://user:password@localhost:5432/qr_analytics
REDIS_URL=redis://localhost:6379

# Authentication
NEXT_PUBLIC_AUTH_API_URL=http://localhost:3000/api/auth
JWT_SECRET=your-jwt-secret-key-here

# External Services
# For geographic data enrichment
IPGEOLOCATION_API_KEY=your-ipgeolocation-api-key
MAXMIND_LICENSE_KEY=your-maxmind-license-key

# Analytics Features
ENABLE_REAL_TIME_ANALYTICS=true
ENABLE_GEOGRAPHIC_TRACKING=true
ENABLE_CONVERSION_TRACKING=true
ENABLE_EXPORT_FEATURES=true

# Rate Limiting
ANALYTICS_RATE_LIMIT_PER_MINUTE=1000
WEBSOCKET_MAX_CONNECTIONS=1000

# Logging
LOG_LEVEL=info
ENABLE_ANALYTICS_LOGGING=true

# File Storage (for exports)
STORAGE_TYPE=local
STORAGE_PATH=./analytics-exports
AWS_S3_BUCKET=qr-analytics-exports
AWS_REGION=us-east-1

# Monitoring
ENABLE_PERFORMANCE_MONITORING=true
SENTRY_DSN=your-sentry-dsn-here

# Development
NODE_ENV=development
PORT=3001